@model Reimbursement

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center mb-4">Welcome to Reimbursement app,please fill out the form to submit your reimbursement.</h3>
<form asp-controller="Reimbursement" asp-action="AddReimbursement" id="form-action" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group mb-3">
       <label asp-for="Name" class="col-sm-4 col-form-label"></label>
      <input asp-for="Name" required />
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
  <div class="form-group mb-3">
                    <label asp-for="Description" class="col-sm-4 col-form-label"></label>
                   <input asp-for="Description" rows="3 class="form-control form-control-lg" required />
        <span asp-validation-for="Description" class="text-danger"></span>
        </div> 
                

        <div class="form-group mb-3">
                    <label asp-for="Amount" class="col-sm-4 col-form-label"></label>
        <input asp-for="Amount" type="number" min = "0" step="0.01" required/>
        <span asp-validation-for="Amount" class="text-danger"></span>
       
    </div>
    <div class="form-group mb-3">
                    <label asp-for="DatePurchased" class="col-sm-4 col-form-label"></label>
        <input asp-for="DatePurchased" type="date" class="text-danger" required />
        <span asp-validation-for="DatePurchased"></span>
    </div>
    <div class="form-group mb-3">
        <label for="file" >Upload File</label>
        <input type="file" id="file" name="file" required class="form-control"/>
    </div>
    <input type="submit" id="form-button" value="Submit" class="btn btn-primary"/>
    <div id="result"></div>
</form>
        </div>
    </div>
</div>




